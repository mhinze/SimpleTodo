@using System.Data.Entity
@using SimpleTodo.Models
@model SimpleTodo.Models.TodoItem

@{
    ViewBag.Title = "Todos";
}

<h2>Todo Lists</h2>

@using (Html.BeginForm())
{
    <div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Content)
            <input type="submit" value="Create new todo"/>
        </div>
        <fieldset>
            <legend>Pending</legend>
            @foreach (var todoItem in (DbSet<TodoItem>) ViewData["TodoList"])
            {
                <p>
                    @Html.CheckBoxFor(ischeck => todoItem.IsChecked)
                    @todoItem.Content
                </p>
            }
        </fieldset>
        <fieldset>
            <legend>In Progress</legend>
                            

        </fieldset>
        <fieldset>
            <legend>Complete</legend>
                            

        </fieldset>
        <p>
            <input type="submit" value="Promote" />
            <input type="submit" value="Delete" />
        </p>
    </div>
}